{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4200/",  // Changed to HTTPS
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "https://localhost:9876/debug.html",  // Changed to HTTPS if your tests use SSL
      "webRoot": "${workspaceFolder}"
    }
  ]
}